{
    "compilerOptions": {
        "module": "commonjs",
		"target": "es5",
		"lib": [
			"es2015",
			"dom"
		],
        "noImplicitAny": false,
		"sourceMap": false,
		"moduleResolution": "node",
		"outDir": "lib",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules"
	],
	"angularCompilerOptions": {
		"genDir": "src/ngfactory"
	}
}
